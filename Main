<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Öğrenci Ders Takip Sistemi</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f9fc; /* Hafif açık arka plan */
        }
        .card {
            background-color: white;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.06);
            border-radius: 12px;
        }
        /* Custom scrollbar for better appearance */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-thumb {
            background-color: #9ca3af;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background-color: #6b7280;
        }
        /* Stick the table header */
        .sticky-header th {
            position: sticky;
            top: 0;
            background-color: #f9fafb;
            z-index: 10;
        }
    </style>
    <!-- Firebase SDK Imports -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, signOut, onAuthStateChanged, sendSignInLinkToEmail, isSignInWithEmailLink, signInWithEmailLink } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, setDoc, onSnapshot, collection, query, orderBy, limit, addDoc, updateDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";

        // Firebase yapılandırması ve global değişkenler
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';

        // Yönetici e-postası için SHA-256 hash'ini gizli bir şekilde kullanıyoruz.
        // E-posta: Halil.yilmaz.09@gmail.com
        const ADMIN_EMAIL_HASH = "8156637e199849549f3e449a0390f70f6993132717088b9c656d0d268efc0f6f";
        
        let app, db, auth, userId = null;
        let isAdmin = false;

        // Modül dışına aktarılacak global fonksiyonlar
        window.saveDailyData = saveDailyData;
        window.handleLogout = handleLogout;
        window.handleEmailSignIn = handleEmailSignIn;
        window.handleAdminLogin = handleAdminLogin; // Yönetici için özel giriş butonu (Normalde gerekmez)
        window.closeModal = closeModal;
        window.checkEmailLink = checkEmailLink;

        // Utility: Basit bir SHA-256 hash fonksiyonu
        async function sha256(message) {
            const msgBuffer = new TextEncoder().encode(message);
            const hashBuffer = await crypto.subtle.digest('SHA-256', msgBuffer);
            const hashArray = Array.from(new Uint8Array(hashBuffer));
            const hashHex = hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
            return hashHex;
        }

        async function initFirebase() {
            try {
                setLogLevel('Debug');
                
                if (!Object.keys(firebaseConfig).length) {
                    throw new Error("Firebase yapılandırması eksik.");
                }

                app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);

                // Kullanıcı kimlik doğrulama durumunu dinleme
                onAuthStateChanged(auth, async (user) => {
                    if (user) {
                        userId = user.uid;
                        const userEmail = user.email || "Anonim Kullanıcı";
                        
                        // Yönetici e-posta kontrolü (Hash ile)
                        // Anonim kullanıcının e-postası olmadığı için bu kontrol sadece e-posta ile girenler için çalışır.
                        if (user.email) {
                            const emailHash = await sha256(userEmail.toLowerCase());
                            isAdmin = emailHash === ADMIN_EMAIL_HASH;
                        } else {
                            // Anonim kullanıcılar yönetici olamaz
                            isAdmin = false;
                        }

                        updateUI(userEmail, userId);
                        startDataListeners();
                    } else {
                        userId = null;
                        isAdmin = false;
                        updateUI(null, null);
                        
                        // Giriş yapılmadıysa, giriş bağlantısı kontrolü
                        await checkEmailLink(); 
                        
                        // Anonim token yoksa veya link ile giriş yapılmadıysa anonim giriş yap
                        if (!auth.currentUser) {
                            await signInAnonymously(auth);
                        }
                    }
                });
                
                // Canvas tarafından sağlanan özel token ile giriş
                if (initialAuthToken) {
                    await signInWithCustomToken(auth, initialAuthToken);
                } else {
                    // Token yoksa, onAuthStateChanged anonim girişi yapacaktır.
                    await signInAnonymously(auth);
                }

            } catch (error) {
                console.error("Firebase başlatma veya kimlik doğrulama hatası:", error);
                document.getElementById('app-container').innerHTML = `<div class="p-6 text-center text-red-600 bg-red-100 rounded-lg">Uygulama başlatılamadı: ${error.message}</div>`;
            }
        }

        // Giriş bağlantısı ile gelindi mi kontrolü
        async function checkEmailLink() {
            if (isSignInWithEmailLink(auth, window.location.href)) {
                let email = localStorage.getItem('emailForSignIn');
                if (!email) {
                    // Kullanıcı e-postayı sildiyse veya tarayıcı değiştirdiyse
                    showPromptModal('Girişi Tamamla', 'Lütfen girişi tamamlamak için e-posta adresinizi giriniz.');
                    return; // Kullanıcı modaldan e-posta girecek
                }
                await completeEmailSignIn(email);
            }
        }

        async function completeEmailSignIn(email) {
             try {
                await signInWithEmailLink(auth, email, window.location.href);
                localStorage.removeItem('emailForSignIn');
                closeModal();
                updateMessage("Giriş başarılı! Artık verilerinizi kaydedebilirsiniz.", "success");
            } catch (error) {
                console.error("Giriş bağlantısı hatası:", error);
                updateMessage("Giriş bağlantısı geçersiz veya süresi dolmuş. Lütfen tekrar deneyin.", "error");
                // Hata durumunda çıkış formunu göster
                updateUI(null, null);
            }
        }

        // Arayüzü güncelleyen ana fonksiyon
        function updateUI(email, uid) {
            const authContainer = document.getElementById('auth-container');
            const dataContainer = document.getElementById('data-container');
            
            if (uid) {
                // Kullanıcı giriş yapmış veya anonim
                const displayEmail = email || 'Misafir (Anonim)';
                authContainer.innerHTML = `
                    <div class="flex flex-col md:flex-row items-start md:items-center space-y-2 md:space-y-0 md:space-x-3 w-full">
                        <div class="flex-grow">
                            <span class="text-sm font-bold text-gray-700 block">${isAdmin ? 'YÖNETİCİ' : 'KULLANICI'}: ${displayEmail}</span>
                            <span class="text-xs text-gray-500 block truncate max-w-xs md:max-w-none">ID: ${uid}</span>
                        </div>
                        ${email ? `<button onclick="handleLogout()" class="px-3 py-1 text-sm font-semibold text-white bg-red-500 rounded-full hover:bg-red-600 transition duration-150">Çıkış Yap</button>` : ''}
                    </div>
                `;
                dataContainer.classList.remove('hidden');
                
                // Yönetici ise, yönetici panelini göster
                if (isAdmin) {
                    document.getElementById('admin-info').classList.remove('hidden');
                    document.getElementById('admin-info').textContent = "Yönetici Modu Aktif: Tüm Kullanıcıların Genel Verilerini Görüntülüyorsunuz. (Halil.yilmaz.09@gmail.com)";
                } else {
                    document.getElementById('admin-info').classList.add('hidden');
                }
                
            } else {
                // Kullanıcı giriş yapmamış 
                authContainer.innerHTML = `
                    <div id="email-input-container" class="space-y-3 p-4 card w-full">
                        <p class="text-center font-semibold text-gray-700">Öğrenci Girişi (E-posta ile)</p>
                        <input id="email-input" type="email" placeholder="E-posta Adresiniz" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" />
                        <button onclick="handleEmailSignIn()" class="w-full px-4 py-2 font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-150">Giriş Bağlantısı Gönder</button>
                    </div>
                `;
                dataContainer.classList.add('hidden');
                document.getElementById('admin-info').classList.add('hidden');
            }
        }
        
        // E-posta ile giriş bağlantısı gönderme
        async function handleEmailSignIn() {
            const emailInput = document.getElementById('email-input');
            const email = emailInput.value.trim();

            if (!email) {
                updateMessage("Lütfen geçerli bir e-posta adresi girin.", "warning");
                return;
            }
            
            const actionCodeSettings = {
                url: window.location.href, // Kullanıcının geri döneceği URL
                handleCodeInApp: true,
            };

            try {
                // E-posta ile giriş linki gönderimi
                await sendSignInLinkToEmail(auth, email, actionCodeSettings);
                localStorage.setItem('emailForSignIn', email);
                updateMessage(`Giriş bağlantısı e-posta adresinize (${email}) gönderildi. Lütfen e-postanızı kontrol edin ve linke tıklayarak girişi tamamlayın.`, "success");
            } catch (error) {
                console.error("Giriş bağlantısı gönderme hatası:", error);
                updateMessage("Giriş bağlantısı gönderilemedi. Lütfen e-posta adresinizi kontrol edin.", "error");
            }
        }

        // Yönetici Girişi için özel fonksiyon (Normalde sadece Halil Hoca'nın token'ı ile çalışır)
        async function handleAdminLogin() {
             updateMessage("Yönetici girişi, Canvas ortamında otomatik token ile sağlanmaktadır. Verileri görmek için sistemin yüklenmesini bekleyiniz.", "info");
        }

        // Çıkış yapma fonksiyonu
        async function handleLogout() {
            try {
                await signOut(auth);
                updateMessage("Başarıyla çıkış yaptınız.", "info");
                document.getElementById('data-list').innerHTML = ''; // Listeyi temizle
                await signInAnonymously(auth); // Çıktıktan sonra anonim olarak tekrar giriş yap
            } catch (error) {
                console.error("Çıkış hatası:", error);
                updateMessage("Çıkış yapılırken bir hata oluştu.", "error");
            }
        }

        // Mesajları gösteren fonksiyon
        function updateMessage(message, type) {
            const messageBox = document.getElementById('message-box');
            let bgColor, textColor;

            switch (type) {
                case 'success':
                    bgColor = 'bg-green-100';
                    textColor = 'text-green-700';
                    break;
                case 'error':
                    bgColor = 'bg-red-100';
                    textColor = 'text-red-700';
                    break;
                case 'warning':
                    bgColor = 'bg-yellow-100';
                    textColor = 'text-yellow-700';
                    break;
                case 'info':
                default:
                    bgColor = 'bg-blue-100';
                    textColor = 'text-blue-700';
                    break;
            }

            messageBox.innerHTML = `<div class="p-3 text-sm ${bgColor} ${textColor} rounded-lg font-medium">${message}</div>`;
            // 5 saniye sonra mesajı temizle
            setTimeout(() => {
                messageBox.innerHTML = '';
            }, 5000);
        }

        // Veri toplama yolu
        function getDataCollectionPath() {
            const base = `/artifacts/${appId}/`;
            // Yönetici, tüm kullanıcıların verilerini 'public/data' altında, 
            // öğrenciler ise kendi 'users/{userId}' altındaki verilerini kaydeder/görür.
            if (isAdmin) {
                return `${base}public/data/student_data_admin_view`;
            } else {
                return `${base}users/${userId}/student_data_private`;
            }
        }

        // Veri Kaydetme/Güncelleme
        async function saveDailyData() {
            if (!userId) {
                updateMessage("Kaydetmek için lütfen önce giriş yapın.", "error");
                return;
            }

            const data = {
                turkishCorrect: parseInt(document.getElementById('turkish-c').value) || 0,
                turkishWrong: parseInt(document.getElementById('turkish-w').value) || 0,
                mathCorrect: parseInt(document.getElementById('math-c').value) || 0,
                mathWrong: parseInt(document.getElementById('math-w').value) || 0,
                socialCorrect: parseInt(document.getElementById('social-c').value) || 0,
                socialWrong: parseInt(document.getElementById('social-w').value) || 0,
                scienceCorrect: parseInt(document.getElementById('science-c').value) || 0,
                scienceWrong: parseInt(document.getElementById('science-w').value) || 0,
                englishCorrect: parseInt(document.getElementById('english-c').value) || 0,
                englishWrong: parseInt(document.getElementById('english-w').value) || 0,
                religionCorrect: parseInt(document.getElementById('religion-c').value) || 0,
                religionWrong: parseInt(document.getElementById('religion-w').value) || 0,
                booksRead: parseInt(document.getElementById('books-read').value) || 0,
                userEmail: auth.currentUser.email || "Anonim", 
                userId: userId, // Yönetici görünümü için kullanıcı ID'sini de ekleyelim
                timestamp: Date.now()
            };

            const totalScore = Object.values(data).slice(0, 12).reduce((sum, val) => sum + val, 0);
            if (totalScore === 0 && data.booksRead === 0) {
                 updateMessage("Lütfen en az bir ders için doğru/yanlış veya okunan kitap sayısı girin.", "warning");
                 return;
            }

            try {
                // 1. Kullanıcının kendi özel verisini kaydet (Private Data)
                const privateCollectionRef = collection(db, `/artifacts/${appId}/users/${userId}/student_data_private`);
                await addDoc(privateCollectionRef, data);

                // 2. Yönetici iseniz veya yönetici görünümüne katkıda bulunacaksanız, genel (public) veriye de kaydet
                // Not: Güvenlik kuralları gereği, tüm öğrencilerin verilerini public koleksiyonda topluyoruz.
                if (auth.currentUser.email) { // Sadece e-posta ile giriş yapanlar (öğrenciler ve yönetici)
                    const adminViewCollectionRef = collection(db, `/artifacts/${appId}/public/data/student_data_admin_view`);
                    await addDoc(adminViewCollectionRef, data);
                }

                // Formu sıfırla
                document.getElementById('data-form').reset();
                updateMessage("Veriler başarıyla kaydedildi!", "success");

            } catch (e) {
                console.error("Veri kaydetme hatası: ", e);
                updateMessage("Veri kaydedilirken bir hata oluştu: " + e.message, "error");
            }
        }

        // Veri dinleyicisini başlatma (Gerçek Zamanlı Güncelleme)
        function startDataListeners() {
            if (!userId) return;

            const collectionPath = getDataCollectionPath();
            const collectionRef = collection(db, collectionPath);
            
            const q = query(collectionRef, orderBy("timestamp", "desc"), limit(50));

            // onSnapshot ile gerçek zamanlı dinleme
            onSnapshot(q, (snapshot) => {
                const records = [];
                snapshot.forEach((doc) => {
                    records.push({ id: doc.id, ...doc.data() });
                });
                renderDataList(records);
            }, (error) => {
                console.error("Veri dinleme hatası: ", error);
                updateMessage("Veriler yüklenirken bir hata oluştu.", "error");
            });
        }
        
        // Verileri arayüze işleme
        function renderDataList(records) {
            const listContainer = document.getElementById('data-list');
            
            if (records.length === 0) {
                listContainer.innerHTML = '<p class="text-center text-gray-500 py-8">Henüz kaydedilmiş veri yok.</p>';
                return;
            }

            let html = `
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50 sticky-header">
                        <tr>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-24">Tarih</th>
                            ${isAdmin ? '<th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-40">Kullanıcı (ID)</th>' : ''}
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dersler (D/Y)</th>
                            <th class="px-3 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-20">Kitap Sayısı</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
            `;

            records.forEach(record => {
                const date = new Date(record.timestamp).toLocaleDateString('tr-TR', { day: '2-digit', month: 'short', year: 'numeric' });
                
                // Ders verilerini düzenli bir liste haline getir
                const lessonData = [
                    { name: 'Türkçe', c: record.turkishCorrect, w: record.turkishWrong, color: 'text-blue-600' },
                    { name: 'Matematik', c: record.mathCorrect, w: record.mathWrong, color: 'text-red-600' },
                    { name: 'Sosyal', c: record.socialCorrect, w: record.socialWrong, color: 'text-green-600' },
                    { name: 'Fen', c: record.scienceCorrect, w: record.scienceWrong, color: 'text-yellow-600' },
                    { name: 'Din K.', c: record.religionCorrect, w: record.religionWrong, color: 'text-purple-600' },
                    { name: 'İngilizce', c: record.englishCorrect, w: record.englishWrong, color: 'text-indigo-600' },
                ].filter(d => d.c > 0 || d.w > 0); 

                const lessonHTML = lessonData.map(d => 
                    `<span class="inline-block mr-3 whitespace-nowrap text-xs md:text-sm ${d.color}">
                        ${d.name}: <span class="font-bold">${d.c}D/${d.w}Y</span>
                    </span>`
                ).join('');

                const userDisplay = isAdmin ? `<td class="px-3 py-3 whitespace-nowrap text-xs text-gray-500 truncate max-w-[100px] md:max-w-none">
                    ${record.userEmail || 'Anonim'} <br> <span class="text-[10px] text-gray-400 truncate">${record.userId}</span>
                </td>` : '';

                html += `
                    <tr>
                        <td class="px-3 py-3 whitespace-nowrap text-sm font-medium text-gray-900">${date}</td>
                        ${userDisplay}
                        <td class="px-3 py-3 text-sm text-gray-700">
                            ${lessonHTML || '<span class="text-gray-400">Veri yok</span>'}
                        </td>
                        <td class="px-3 py-3 whitespace-nowrap text-sm text-center font-bold text-gray-900">${record.booksRead}</td>
                    </tr>
                `;
            });

            html += `
                    </tbody>
                </table>
            `;
            listContainer.innerHTML = html;
        }

        // --- Modal Kontrolleri ---
        function closeModal() {
            document.getElementById('modal').classList.add('hidden');
        }

        // Basit bir prompt modalı gösterme (Giriş tamamlama için)
        function showPromptModal(title, message) {
            const modalBody = document.getElementById('modal-body');
            const content = `
                <p class="mb-4">${message}</p>
                <input type="email" id="modal-email-input" placeholder="E-posta Adresiniz" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 mb-4" />
                <button id="modal-submit-btn" class="w-full px-4 py-2 font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-150">Girişi Tamamla</button>
            `;
            
            document.getElementById('modal-title').textContent = title;
            modalBody.innerHTML = content;
            document.getElementById('modal').classList.remove('hidden');

            document.getElementById('modal-submit-btn').onclick = () => {
                const email = document.getElementById('modal-email-input').value.trim();
                if (email) {
                    completeEmailSignIn(email);
                } else {
                    updateMessage("Lütfen geçerli bir e-posta girin.", "warning");
                }
            };
        }
        // --- Modal Kontrolleri Bitiş ---

        // Uygulamayı başlat
        window.onload = initFirebase;
    </script>
</head>
<body class="p-4 md:p-8">

    <!-- Ana Konteyner -->
    <div id="app-container" class="max-w-4xl mx-auto space-y-8">
        
        <header class="flex flex-col md:flex-row justify-between items-center p-4 bg-white card sticky top-0 z-20">
            <h1 class="text-2xl font-extrabold text-blue-700 mb-3 md:mb-0">Ders Başarı Takip Sistemi</h1>
            <!-- Auth Container (Giriş/Çıkış Butonu) -->
            <div id="auth-container" class="w-full md:w-auto">
                <!-- Buraya JS ile Giriş Formu veya Kullanıcı Bilgisi gelecek -->
                <div class="text-center text-gray-500">Yükleniyor...</div>
            </div>
        </header>

        <!-- Mesaj Kutusu -->
        <div id="message-box"></div>
        
        <!-- Yönetici Bilgisi -->
        <div id="admin-info" class="hidden p-3 bg-red-100 text-red-800 text-center rounded-lg font-semibold border border-red-200"></div>

        <!-- Veri Giriş ve Görüntüleme Alanı -->
        <div id="data-container" class="hidden space-y-8">
            
            <!-- 1. Veri Giriş Formu -->
            <div class="card p-4 md:p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2">Yeni Günlük Veri Girişi</h2>
                <form id="data-form" onsubmit="event.preventDefault(); saveDailyData();" class="space-y-4">
                    
                    <div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
                        <!-- Türkçe -->
                        <div class="bg-blue-50 p-3 rounded-lg">
                            <label class="block text-sm font-bold text-blue-700 mb-1">Türkçe</label>
                            <div class="flex space-x-2">
                                <input type="number" id="turkish-c" placeholder="Doğru (D)" min="0" class="w-1/2 p-2 border border-blue-200 rounded-lg focus:ring-blue-500" />
                                <input type="number" id="turkish-w" placeholder="Yanlış (Y)" min="0" class="w-1/2 p-2 border border-blue-200 rounded-lg focus:ring-blue-500" />
                            </div>
                        </div>
                        <!-- Matematik -->
                        <div class="bg-red-50 p-3 rounded-lg">
                            <label class="block text-sm font-bold text-red-700 mb-1">Matematik</label>
                            <div class="flex space-x-2">
                                <input type="number" id="math-c" placeholder="Doğru (D)" min="0" class="w-1/2 p-2 border border-red-200 rounded-lg focus:ring-red-500" />
                                <input type="number" id="math-w" placeholder="Yanlış (Y)" min="0" class="w-1/2 p-2 border border-red-200 rounded-lg focus:ring-red-500" />
                            </div>
                        </div>
                        <!-- Sosyal Bilgiler -->
                        <div class="bg-green-50 p-3 rounded-lg">
                            <label class="block text-sm font-bold text-green-700 mb-1">Sosyal Bilgiler</label>
                            <div class="flex space-x-2">
                                <input type="number" id="social-c" placeholder="Doğru (D)" min="0" class="w-1/2 p-2 border border-green-200 rounded-lg focus:ring-green-500" />
                                <input type="number" id="social-w" placeholder="Yanlış (Y)" min="0" class="w-1/2 p-2 border border-green-200 rounded-lg focus:ring-green-500" />
                            </div>
                        </div>
                        <!-- Fen Bilgisi -->
                        <div class="bg-yellow-50 p-3 rounded-lg">
                            <label class="block text-sm font-bold text-yellow-700 mb-1">Fen Bilgisi</label>
                            <div class="flex space-x-2">
